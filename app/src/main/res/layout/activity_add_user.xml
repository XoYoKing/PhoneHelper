<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jrh.project.phonehelper.phonebook.activity.AddUserActivity">

    <include layout="@layout/layout_view_head"></include>
    <TextView
        android:id="@+id/tv_user_name"
        style="@style/common_textview"
        android:text="姓名:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_new_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入新的名字"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_user_num"
        style="@style/common_textview"
        android:text="电话:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_new_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入新的号码"
        android:inputType="phone"
        android:textSize="20sp" />
    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_sure"
       android:layout_gravity="right"
        android:padding="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E88E5"

        android:text="确定" />
</LinearLayout>
